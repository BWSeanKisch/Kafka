@using Kafka.Database
@using Kafka.Database.Entities
@model NewsArticle

@{
    var newsArticles = NewsArticleManager.List();
}
@if (!newsArticles.Any())
{
    <h2 class="alert-info">There are no news articles</h2>
}
else
{
    <div class="container">
        <div class="row margin-bottom-90">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <h3 class="text-center">Active news articles</h3>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12">
                <table class="small">
                    <thead>
                    <tr>
                        <th width="10%" class="text-center">
                            Image
                        </th>
                        <th width="40%" class="text-center">
                            Title
                        </th>
                        <th width="40%" class="text-center">
                            Preamble
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in newsArticles)
                    {
                        <tr class="ml-3 mr-3">
                            <td>
                                <img class="img-thumbnail" src="/@item.Image" />
                            </td>
                            <td>
                                <strong><a href="/NewsArticle/EditNewsArticle?id=@item.Id">@item.Title</a></strong>
                            </td>

                            <td>
                                <p>@item.Preamble</p>
                            </td>

                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

    <div class="text-center">
        <a class="btn btn-dark" href="/NewsArticle">Back</a>
        <a class="btn btn-primary" href="/Home">Back to Home</a>
    </div>
